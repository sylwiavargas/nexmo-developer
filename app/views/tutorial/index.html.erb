<div class="Vlt-grid">
  <div class="Vlt-col Vlt-col--3of4">
    <div class="Vlt-card">
      <div class="Ndx-task-step__code-language Vlt-right">
        <%= render 'code_languages/icon', code_language: @tutorial.code_language %>
      </div>
    <%= @content.html_safe %>

    <br />
    <div class="Vlt-grid">
      <div class="Vlt-col">
        <% if @tutorial.previous_step %>
          <a class="Vlt-btn Vlt-btn--secondary" href="<%= "/#{@tutorial.current_product}/tutorials/#{@tutorial.name}/#{@tutorial.previous_step.name}/#{@tutorial.code_language}" %>"> &laquo; Previous</a>
        <% end %>
      </div>
      <div class="Vlt-col Vlt-right">
        <% if @tutorial.next_step %>
          <a class="Vlt-btn Vlt-btn--secondary" href="<%= "/#{@tutorial.current_product}/tutorials/#{@tutorial.name}/#{@tutorial.next_step.name}/#{@tutorial.code_language}" %>">Next &raquo;</a>
        <% end %>
      </div>
     </div>
    </div>
  </div>
  <div class="Vlt-col Vlt-col--1of4 Nxd-task-step-list">
      <div class="Vlt-card">
        <div class="Vlt-card__corner Vlt-bg-blue">
          <svg class="Vlt-icon"><use xlink:href="/symbol/volta-icons.svg#Vlt-icon-list"/></svg>
        </div>
        <div class="Vlt-card__content">
          <h4><%= @tutorial.title %></h4>
          <small><%= @tutorial.description %></small>
          <br /><br />
          <div>
            <% if @tutorial.available_code_languages.any? %>
              <span style="font-weight: bold;">Also available on:</span>
              <ul class="Ndx-task__code-language-list">
                <% @tutorial.available_code_languages.each do |language| %>
                  <li class="Ndx-task-step__code-language">
                    <a title="<%= language %>" href="<%= "/#{@tutorial.current_product}/tutorials/#{@tutorial.name}/#{@tutorial.first_step}/#{language}" %>">
                      <%= render 'code_languages/icon', code_language: language %>
                    </a>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
          <br /><br />
          <span style="font-weight: bold;">Steps</span>
          <br />
          <br />
            <% @tutorial.subtasks.each_with_index do |t, i| %>
            <div class="Vlt-grid">
              <div class="Vlt-col Vlt-col--1of4">
              <span class="Vlt-number <%= t.active? ? 'Vlt-bg-blue': 'Vlt-bg-grey' %>" style="margin:0"><%= i+1 %></span>
                </div>
              <div class="Vlt-col Vlt-col--3of4 Nxd-step">
                <a title="<%= t.description %>" href="<%= "/#{@tutorial.current_product}/tutorials/#{@tutorial.name}/#{t.name}/#{@tutorial.code_language}" %>"><%= t.title %></a>
              </div>
            </div>
            <% end %>
        </div>
      </div>

  </div>
</div>
